 // -----------------------------------------------

@media only screen and (max-width: 992px) {
    //  Header
    // ------------------------------------
    .site-nav a{
        padding:0 10px;
    }
    .site-header__logo{
        margin:10px 0;
    }
    nav.small--hide{
        display:none !important;
    }
    .grid::after{
        display:none;
    }
    .site-header__icon{
        display: inline-block;
        vertical-align: middle;
        padding: 10px 11px;
        margin: 0;
    }

    // Banner Image
    // ------------------------------------
    .image-banner{
        .hero-show{
            .banner-content-inner{
                .box-title-slide{
                    font-size:16px;
                }
            }
        }
    }   

    // Product
    // --------------------------------------
    #shopify-section-featured-collections {
        .grid{
            margin-left:-30px;
            .product--feature{
                width:50%;
            }
        }
    } 

    // Footer
    // --------------------------------------
    .site-footer__content{
        display:block;
    }
    .site-footer__item--one-fifth:first-child,.site-footer__item--one-fifth{
        flex: 0 0 50%;
        max-width: 50%;
        width:50%;
        float:left;
    }
    .site-footer__item-inner--newsletter{
        width:100%;
    }

    .full-copyright{
        .small--hide-footer{
            small{
                width:100%;
                float:left;
                text-align:center;
                padding-bottom:20px;
                font-weight:700;
            }
            .payment-footer{
                width:100%;
                text-align:center;
            }
        }
    }
}

