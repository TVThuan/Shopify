// SlideShow
// --------------------------------------------------------
.box-slide-show{
    position:relative;
    &:hover{
        .owl-nav{
            button.owl-prev,button.owl-next{
                visibility: visible;
                opacity: 1;
            }
        }
    }
    .owl-nav{
        button.owl-prev, button.owl-next{
            position: absolute;
            text-align: center;
            cursor: pointer;
            color: #ababab;
            position: absolute;
            top: calc(50% - 16px);
            background: none;
            border: none;
            transition: all 300ms;
            -webkit-transition: all 300ms;
            -moz-transition: all 300ms;
            -o-transition: all 300ms;
            font-size:46px;
            line-height: 46px;
            visibility: hidden;
            opacity: 0;
            transform: scale(0.7);
        }
        .owl-prev{
            left:15px;
            right:auto;
            transform: scale(0.7);
            &:hover{
               transform: scale(1);  
            }
        }
        .owl-next{
            right:15px;
            left:auto;
            transform: scale(0.7);
             &:hover{
               transform: scale(1);  
            }
        }
    }
}

